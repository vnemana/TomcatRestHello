<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Namaste</servlet-name>
        <servlet-class>com.mahesh.web.Namaste</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Namaste</servlet-name>
        <url-pattern>/namaste</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CreateUserHandler</servlet-name>
        <servlet-class>com.mahesh.web.CreateUserHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUserHandler</servlet-name>
        <url-pattern>/createuser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllUsersHandler</servlet-name>
        <servlet-class>com.mahesh.web.GetAllUsersHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllUsersHandler</servlet-name>
        <url-pattern>/getallusers</url-pattern>
    </servlet-mapping>

</web-app>